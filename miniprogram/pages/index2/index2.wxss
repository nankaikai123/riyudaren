/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* 设置提示层  */
.isSetShow{
    display: block;
}
.isSetHide{
    display: none;
}
.setZhezhao{
    height: 100%;
    width: 100%;
    position: fixed;
    background-color:rgba(0, 0, 0, .5);
    z-index: 2;
    top: 0;
    left: 0;
}
.setZhezhaoContent{
    height: 50%;
    width: 90%;
    background: #e1d2b1;
    margin: 40% auto;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    position: relative;
}
.setZhezhaoText{
    width: 80%;
    font-size: 50rpx;
    color: #856d5f;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 25rpx 0 25rpx 0;
}
.setZhezhaoText text{
    flex-wrap:wrap;
    width: 80%;
    font-size: 30rpx;
}
.setHide{
    height: 60rpx!important;
    width: 60rpx!important;
    position: absolute;
    top: -20rpx;
    right: -20rpx;
}
/*  end  */
